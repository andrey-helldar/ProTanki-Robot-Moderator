<Window x:Class="ProTanki_Robot_Moderator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProTanki Robot-Moderator" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Icon="PROTanks.ico" MinWidth="640" MinHeight="480" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Content="Authorize" HorizontalAlignment="Center" Margin="58,5,7,5" Grid.Row="7" VerticalAlignment="Center" Click="Button_Click" Padding="20,5" Grid.Column="2"/>
        <TextBox x:Name="tbToken" Height="23" Margin="5,5,10,0" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="5"/>
        <Label Content="access token" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="6" VerticalAlignment="Top" Height="26" Width="77"/>
        <Button x:Name="bStartBot" Content="Start bot" HorizontalAlignment="Center" Margin="60,5,10,5" Grid.Row="8" VerticalAlignment="Center" Click="Button_Click_1" Padding="20,5" Grid.Column="2"/>
        <Label Content="Статус:" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbStatus" Grid.Column="1" HorizontalAlignment="Left" Margin="10,8,0,7" TextWrapping="Wrap" Text="Отдыхаю" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbStartAt" Grid.Column="2" HorizontalAlignment="Left" Margin="10,8,0,7" TextWrapping="Wrap" Text="0000-00-00 00:00:00" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbEndAt" Grid.Column="3" HorizontalAlignment="Left" Margin="10,8,0,7" TextWrapping="Wrap" Text="0000-00-00 00:00:00" VerticalAlignment="Center"/>
        <ProgressBar x:Name="pbStatus" Grid.ColumnSpan="6" Height="10" Margin="10,5" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbDiff" Grid.Column="4" HorizontalAlignment="Left" Margin="10,5" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,5" Grid.Row="2" TextWrapping="Wrap" Text="Всего постов:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,5" Grid.Row="3" TextWrapping="Wrap" Text="Всего комментов:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,5" Grid.Row="4" TextWrapping="Wrap" Text="Молодых комментов:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,5" Grid.Row="5" TextWrapping="Wrap" Text="Удалено комментов:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,5" Grid.Row="5" TextWrapping="Wrap" Text="Ошибка удаления:" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,5" Grid.Row="2" TextWrapping="Wrap" Text="Заблокировано перманентно:" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,5" Grid.Row="3" TextWrapping="Wrap" Text="Заблокировано на месяц:" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,5" Grid.Row="4" TextWrapping="Wrap" Text="Заблокировано на неделю:" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBlock x:Name="logAllPosts" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5" Grid.Row="2" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="logAllComments" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5" Grid.Row="3" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="logTeenage" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5" Grid.Row="4" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="logDeleted" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5" Grid.Row="5" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="logBanPermanent" Grid.Column="3" HorizontalAlignment="Left" Margin="10,5" Grid.Row="2" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="logBanMonth" Grid.Column="3" HorizontalAlignment="Left" Margin="10,5" Grid.Row="3" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="logBanWeek" Grid.Column="3" HorizontalAlignment="Left" Margin="10,5" Grid.Row="4" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="logErrorDelete" Grid.Column="3" HorizontalAlignment="Left" Margin="10,5" Grid.Row="5" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>
</Window>
