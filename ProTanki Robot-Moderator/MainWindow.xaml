<Window x:Class="ProTanki_Robot_Moderator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProTanki Robot-Moderator" Height="350" Width="525" WindowStartupLocation="CenterOwner" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="117*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Content="Authorize" HorizontalAlignment="Center" Margin="10,5" Grid.Row="2" VerticalAlignment="Center" Width="75" Click="Button_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbToken" Height="23" Margin="5,5,10,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="access token" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Center" Margin="10,5" Grid.Row="3" VerticalAlignment="Center" Width="75" Click="Button_Click_1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbLog" Margin="10" TextWrapping="Wrap" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True"/>

    </Grid>
</Window>
