<Window x:Class="ProTanki_Robot_Moderator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProTanki Robot-Moderator" Height="350" Width="525" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Icon="PROTanks.ico" MinWidth="800" MinHeight="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Content="Authorize" HorizontalAlignment="Center" Margin="78,5,6,5" Grid.Row="4" VerticalAlignment="Center" Width="76" Click="Button_Click" Height="22" Grid.Column="2"/>
        <TextBox x:Name="tbToken" Height="23" Margin="5,5,10,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="4"/>
        <Label Content="access token" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="3" VerticalAlignment="Top" Height="26" Width="77"/>
        <Button x:Name="bStartBot" Content="Start bot" HorizontalAlignment="Center" Margin="78,5,6,5" Grid.Row="5" VerticalAlignment="Center" Width="76" Click="Button_Click_1" Height="22" Grid.Column="2"/>
        <TextBox x:Name="tbLog" Margin="10" TextWrapping="Wrap" Grid.ColumnSpan="5" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" Grid.Row="2"/>
        <Label Content="Статус:" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbStatus" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5" TextWrapping="Wrap" Text="Отдыхаю" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbStartAt" Grid.Column="2" HorizontalAlignment="Left" Margin="10,5" TextWrapping="Wrap" Text="0000-00-00 00:00:00" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbEndAt" Grid.Column="3" HorizontalAlignment="Left" Margin="10,5" TextWrapping="Wrap" Text="0000-00-00 00:00:00" VerticalAlignment="Center"/>
        <ProgressBar x:Name="pbStatus" Grid.ColumnSpan="5" Height="10" Margin="10,5" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbDiff" Grid.Column="4" HorizontalAlignment="Left" Margin="10,5" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Center"/>

    </Grid>
</Window>
