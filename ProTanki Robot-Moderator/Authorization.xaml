<Window x:Class="AIRUS_Bot_Moderator.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authorization" Height="300" Width="300" MinWidth="640" MinHeight="480" Icon="Resources/PROTanks.ico" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WebBrowser x:Name="wbAuth" Margin="0" Navigating="wbAuth_Navigating" LoadCompleted="wbAuth_LoadCompleted"/>
        <StatusBar Margin="0" Grid.Row="1">
            <Label x:Name="lStatus" Content="Ожидание" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </StatusBar>

    </Grid>
</Window>
